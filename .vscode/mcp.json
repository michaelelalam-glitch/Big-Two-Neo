{
  "servers": {
    "notion": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "@notionhq/notion-mcp-server"],
      "env": {
        "OPENAPI_MCP_HEADERS": "{\"Authorization\": \"Bearer ${input:notionApiKey}\", \"Notion-Version\": \"2022-06-28\"}"
      }
    }
  },
  "inputs": [
    {
      "type": "promptString",
      "id": "notionApiKey",
      "description": "Notion Integration API Key (from notion.so/profile/integrations)",
      "password": true
    }
  ]
}
